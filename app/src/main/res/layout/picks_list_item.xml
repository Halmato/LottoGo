                android:layout_alignRight="@+id/iv_ball_3"
                android:layout_alignBottom="@+id/iv_ball_3"
                android:layout_margin="1dp"
                android:gravity="center"
                tools:text="10"
                android:textColor="#000000" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_ball_4"
            android:layout_height="@dimen/ball_size_in_list_view"
            android:layout_width="@dimen/ball_size_in_list_view"
            android:layout_margin="@dimen/margin_between_balls_in_list_view">

            <ImageView
                android:contentDescription="@string/result_number"
                android:id="@+id/iv_ball_4"
