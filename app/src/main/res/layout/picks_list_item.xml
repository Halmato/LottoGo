                android:layout_alignBottom="@+id/iv_ball_5"
                android:layout_margin="1dp"
                android:gravity="center"
                tools:text="36"
                android:textColor="#000000" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_ball_6"
            android:layout_height="@dimen/ball_size_in_list_view"
            android:layout_width="@dimen/ball_size_in_list_view"
            android:layout_margin="@dimen/margin_between_balls_in_list_view">

            <ImageView
                android:contentDescription="@string/result_number"
                android:id="@+id/iv_ball_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blue_ball" />

            <TextView
                android:id="@+id/tv_ball_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_ball_6"
                android:layout_alignStart="@+id/iv_ball_6"
                android:layout_alignTop="@+id/iv_ball_6"
                android:layout_alignRight="@+id/iv_ball_6"
                android:layout_alignEnd="@+id/iv_ball_6"
                android:layout_alignBottom="@+id/iv_ball_6"
                android:layout_margin="1dp"
                android:gravity="center"
                tools:text="46"
                android:textColor="#000000" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>